{
  "name": "bjut-auto-login",
  "version": "0.9.7",
  "description": "BJUT 校园网自动认证 (Electron)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:mac && npm run build:win && npm run build:linux",
    "build:mac": "electron-builder --mac --x64 --arm64",
    "build:win": "electron-builder --win --x64 --ia32 --arm64",
    "build:linux": "electron-builder --linux --x64 --arm64"
  },
  "build": {
    "appId": "com.quitsense.bjutautologin",
    "productName": "BJUT Network Autologin",
    "publish": null,
    "files": [
      "main.js",
      "index.html",
      "utils/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "utils/basic.png"
    },
    "win": {
      "target": "nsis",
      "icon": "utils/basic.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "utils/basic.png"
    }
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "axios": "^1.12.2",
    "cheerio": "1.0.0-rc.10",
    "electron-store": "8.0.0",
    "keytar": "7.9.0",
    "material-ripple-effects": "^2.0.1",
    "node-wifi": "2.0.16",
    "qs": "6.11.0",
    "systeminformation": "^5.27.10"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^24.9.1"
  }
}
